<div class="col-md-4 col-md-offset-4">
    <div class="well">
      <%= form_for @entry do |f| %>
         <div class="form-group">
              <%= f.label :name %>
              <%= f.text_field :name, class:"form-control" %>
          </div>
          <div class="form-group">
              <%= f.label :email %>
              <%= f.email_field  :email, class:"form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :comments %>
            <%= f.submit "Submit", class:"btn btn-default" %>

      <% end %>
    </div>
  </div>